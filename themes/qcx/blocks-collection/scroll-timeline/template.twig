<section class="{{ block.slug }} {{ block.className }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xxl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-xxl" %}

	<div class="{{ pt }} {{ pb }} relative">
		<div class="flex flex-col ~gap-[2rem]/[3rem] relative">
			{% if fields.heading or fields.paragraph %}
				<div class="container">
                    <div class="flex justify-between gap-[2rem] max-md:flex-col">
                        <div class="flex flex-col ~gap-[1rem]/[1.5rem] max-w-[48.25rem]">
                            {% if fields.heading %}
                                <h2 class="block-heading alpha">
                                    {{ fields.heading }}
                                </h2>
                            {% endif %}

                            {% if fields.paragraph %}
                                <p class="text-black-75 alpha block-para max-w-[41.125rem]">
                                    {{fields.paragraph}}
                                </p>
                            {% endif %}
                        </div>
                    
                        <div class="flex gap-[0.75rem] shrink-0 mt-auto">
                            <div class="arrow prev">
                                <div class="arrow-inner">
                                    <svg width="10" height="10" viewbox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M10 4.99946L4.99946 10L3.82882 8.82936L6.83087 5.82731H0V4.17161H6.83087L3.82882 1.17064L4.99946 0L10 4.99946Z" fill="#8BFFF7"/>
                                    </svg>
                                </div>
                            </div>

                            <div class="arrow next">
                                <div class="arrow-inner">
                                    <svg width="10" height="10" viewbox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M10 4.99946L4.99946 10L3.82882 8.82936L6.83087 5.82731H0V4.17161H6.83087L3.82882 1.17064L4.99946 0L10 4.99946Z" fill="#8BFFF7"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
				</div>
			{% endif %}

			{% if fields.items|length %}
				<div class="carousel-container">
					<div class="owl-carousel">
						{% for index, item in fields.items %}
							<div class="item">
                                <div class="~h-[15.125rem]/[20.375rem] rounded-[0.25rem] overflow-hidden">
                                    {% include 'components/image.twig' with {
                                        'image': item.image,
                                        'size': "large",
                                    } %}
                                </div>
                                
                                {% if item.title %}
                                    <h3>{{ item.title }}</h3>
                                {% endif %}

                                {% if item.description %}
                                    <p>{{ item.description }}</p>
                                {% endif %}
							</div>
						{% endfor %}
					</div>

				</div>
			{% endif %}
		</div>
	</div>
</section>
