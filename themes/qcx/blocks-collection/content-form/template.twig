<section class="{{ block.slug }} {{ block.className }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-lg" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-lg" %}

	<div class="{{ pt }} {{ pb }}">
		<div class="container max-lg:px-0">
			<div class="flex ~gap-[2.5rem]/[8.75rem] items-center max-lg:flex-col">
				{% if fields.heading or fields.paragraph %}
					<div class="flex flex-col ~gap-[1rem]/[1.5rem] lg:flex-1 lg:basis-[34.125rem] min-w-0 lg:py-[2rem] self-stretch max-lg:~px-[1rem]/[3rem] max-lg:w-full">
						{% if fields.heading %}
							<h2 class="block-heading alpha text-white">
								{{ fields.heading }}
							</h2>
						{% endif %}

						{% if fields.paragraph %}
							<p class="block-para alpha text-white-75">
								{{ fields.paragraph }}
							</p>
						{% endif %}

						{% if fields.bullets|length %}
							<div class="flex flex-col ~gap-[0.5rem]/[0.75rem]">
								{% for bullet in fields.bullets %}
                                    {% if bullet.text %}
                                        <div class="flex ~gap-[0.5rem]/[0.75rem]">
                                            <div class="flex items-center justify-center h-[1.375rem] w-[1.375rem] border-[1px] bg-neutral-700 border-dark-grey rounded-[50%] shrink-0 relative top-[0.125rem]">
                                                <svg class="h-[0.875rem] w-[0.875rem]" width="14" height="14" viewbox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M11.9053 4.61328L5.54199 10.9766L2.09473 7.53027L3.15527 6.46973L5.54102 8.85547L10.8447 3.55273L11.9053 4.61328Z" fill="white"/>
                                                </svg>
                                            </div>

                                            <p class="text-white-75">{{ bullet.text }}</p>
                                        </div>
                                    {% endif %}
                                {% endfor %}
							</div>
						{% endif %}
					</div>
				{% endif %}

				<div class="max-lg:order-2 lg:flex-1 lg:basis-[41.25rem] ~px-[1rem]/[4rem] ~py-[1rem]/[1.5rem] relative lg:rounded-[0.25rem] overflow-hidden flex min-w-0 self-stretch">
					<div class="relative z-[2] ~py-[2rem]/[3rem] ~px-[1.25rem]/[2rem] rounded-[0.25rem] overflow-hidden flex flex-col gap-[2rem] w-full bg-black min-h-[32.5rem]">
						{% if fields.title or fields.subtext %}
							<div class="flex flex-col gap-[0.25rem]">
								{% if fields.title %}
									<h5 class="text-white">{{ fields.title }}</h5>
								{% endif %}

								{% if fields.subtext %}
									<div class="rich-text on-dark">{{ fields.subtext }}</div>
								{% endif %}
							</div>
						{% endif %}
					</div>

					{% if bg %}
						<div class="media-container image">
							{% include 'components/image.twig' with {
                                'image': bg,
                                'size': "large",
                                'loading': "eager",
                            } %}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>

