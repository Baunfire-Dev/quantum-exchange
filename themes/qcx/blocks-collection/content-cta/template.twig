<section class="{{ block.slug }} {{ block.className }} bg-black relative">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xxl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-xxl" %}

	<div class="container relative z-[2]">
		<div class="{{ pt }} {{ pb }}">
			<div class="mx-auto flex flex-col rounded-[0.25rem] items-center w-full max-w-[54.25rem] ~py-[2.5rem]/[4rem] ~px-[2rem]/[3rem] gap-[2.25rem] border-[1px] border-white-20 backdrop-blur-[3.125rem]">
				<div class="flex flex-col ~gap-[2rem]/[3rem] justify-center items-center">
					{% if fields.heading or fields.paragraph %}
						<div class="flex flex-col ~gap-[1rem]/[1.5rem] text-center justify-center items-center">
							{% if fields.heading %}
								<h2 class="block-heading alpha text-white">
									{{ fields.heading }}
								</h2>
							{% endif %}

							{% if fields.paragraph %}
								<p class="block-para alpha text-white">
									{{ fields.paragraph }}
								</p>
							{% endif %}
						</div>
					{% endif %}

					{% include 'components/cta.twig' with {
                        'class' : 'large black',
                        'cta': fields.cta, 
                        'icon': true,
                    } %}
				</div>
			</div>
		</div>
	</div>

	{% if fields.media_type == "image" and fields.media_image %}
		<div class="media-container image">
			{% include 'components/image.twig' with {
                'image': fields.media_image,
                'size': "full",
            } %}
		</div>
	{% endif %}

	{% if fields.media_type == "video" and fields.media_video %}
		<div class="media-container video" data-video="{{ fields.media_video }}"></div>
	{% endif %}
</section>

