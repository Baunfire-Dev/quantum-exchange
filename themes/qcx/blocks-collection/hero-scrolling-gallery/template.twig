<section class="{{ block.slug }} {{ block.className }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xxl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-none" %}

	<div class="{{ pt }} {{ pb }}">
        <div class="flex flex-col ~gap-[2rem]/[3rem]">
            {% if fields.heading or fields.paragraph or fields.cta %}
                <div class="container">
                    <div class="flex ~gap-[1rem]/[1.5rem] items-center flex-col text-center">
                        {% if fields.heading %}
                            <h1 class="block-heading alpha max-w-[56.25rem]">
                                {{ fields.heading }}
                            </h1>
                        {% endif %}

                        {% if fields.paragraph %}
                            <p class="block-para alpha text-black-75 max-w-[41.125rem]">{{ fields.paragraph }}</p>
                        {% endif %}

                        {% include 'components/cta.twig' with {
                            class: "filled teal",
                            cta: fields.cta,
                            icon: true
                        } %}
                    </div>
                </div>
            {% endif %}

            {% if fields.images|length %}
                <div class="marquee">
                    <div class="marquee-inner">
                        {% for x in 1..2 %}
                            {% for image in fields.images %}
                                <div class="marquee-item">
                                    {% include 'components/image.twig' with {
                                        'class': "object-top",
                                        'image': image,
                                        'size': "full",
                                        'loading': 'eager'
                                    } %}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
	</div>
</section>

