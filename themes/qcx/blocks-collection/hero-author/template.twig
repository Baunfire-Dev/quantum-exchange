<section class="{{ block.slug }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	<div class="container">
		<div class="st-xs sb-lg">
            <div class="flex flex-col ~gap-[1rem]/[4.5rem]">
                {% if back_cta %}
					{% set link_url = back_cta.url ?: "#" %}
					{% set link_title = back_cta.title %}
					{% set link_target = back_cta.target ?: "_self" %}

					<a class="btn back black has-arrow" type="button" href="{{ link_url }}" target="{{ link_target }}">
						<svg width="10" height="10" viewbox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M10 4.99946L4.99946 10L3.82882 8.82936L6.83087 5.82731H0V4.17161H6.83087L3.82882 1.17064L4.99946 0L10 4.99946Z" fill="#8BFFF7"/>
						</svg>

						<p>{{ link_title }}</p>
					</a>
				{% else %}
					<a href="#"></a>
				{% endif %}

                <div class="grid lg:grid-cols-2 ~gap-[2rem]/[1.5rem]">
                    <div class="flex ~gap-[1rem]/[1.5rem] h-fit">
                        {% if feature_image %}
                            <div class="~h-[4.625rem]/[5.75rem] ~w-[4.625rem]/[5.75rem] rounded-[0.25rem] overflow-hidden shrink-0">
                                {% include 'components/image.twig' with {
                                    image: feature_image,
                                    size: "large",
                                    loading: "eager"
                                } %}
                            </div>
                        {% else %}
                            <div class="~h-[4.625rem]/[5.75rem] ~w-[4.625rem]/[5.75rem] rounded-[0.25rem] overflow-hidden shrink-0">
                                <img src="{{ function("png", "placeholder") }}" loading="eager" alt="placeholder image">
                            </div>
                        {% endif %}

                        <div class="flex-1 flex flex-col ~gap-[0.5rem]/[0.75rem] justify-center">
                            <h2 class="block-heading alpha">{{ title }}</h2>

                            {% if author_title %}
                                <p class="block-para alpha text-black-75">{{ author_title }}</p>
                            {% endif %}
                        </div>
                    </div>

                    {% if author_bio %}
                        <div class="flex flex-col ~gap-[0.5rem]/[0.75rem]">
                            <h3>Bio</h3>
                            <p class="text-black-75 whitespace-pre-wrap">{{ author_bio }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
		</div>
	</div>
</section>
