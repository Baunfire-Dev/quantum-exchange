<article class="rc {{ custom_class ?: " default" }}" {{ show_type and type_slug ? "data-type='" ~ type_slug ~ "'" }} {{ cats ? "data-category='" ~ cats | json_encode | raw ~ "'" }}>
	<a href="{{ permalink }}" class="rc-link"></a>

	<div class="rc-card {{ animated ? " alpha" }}">
		<div class="rc-head">
			{% if type %}
				<div class="rc-tag">
					<div class="rc-square"></div>
					<small>{{ type }}</small>
				</div>
			{% endif %}

			{% if title %}
				{% if custom_class and ("at-hero" in custom_class) %}
					<h5>{{ title }}</h5>
				{% else %}
					<p class="lg">{{ title }}</p>
				{% endif %}
			{% endif %}
		</div>

		<div class="rc-media">
			<div class="rc-thumbnail">
				{% if custom_class and ("is-listing" in custom_class) %}
					{% if thumbnail %}
						<img data-src="{{ thumbnail }}" alt="{{ title }}" loading="{{ loading ?: "lazy" }}" loading="lazy"/>
					{% else %}
						<img data-src="{{ function('png', 'thumbnail') }}" loading="{{ loading ?: "lazy" }}" loading="lazy" alt="default qcx thumbnail placeholder"/>
					{% endif %}
				{% else %}
					{% if thumbnail %}
						<img src="{{ thumbnail }}" alt="{{ title }}" loading="{{ loading ?: "lazy" }}" {{ loading and loading == "eager" ? 'fetchpriority="high"' }}/>
					{% else %}
						<img src="{{ function('png', 'thumbnail') }}" loading="{{ loading ?: "lazy" }}" {{ loading and loading == "eager" ? 'fetchpriority="high"' }} alt="default qcx thumbnail placeholder"/>
					{% endif %}
				{% endif %}
			</div>
		</div>
	</div>
</article>
