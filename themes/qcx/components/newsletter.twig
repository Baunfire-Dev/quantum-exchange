
{# components/newsletter.twig #}
{# -------- Options (with sane fallbacks) -------- #}
{% set nl_title   = fn('get_field','newsletter_title','option') ?: 'Sign up for our newsletter' %}
{% set nl_text    = fn('get_field','newsletter_text','option')  ?: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' %}
{% set env_top    = fn('get_field','newsletter_env_top','option') ?: '/wp-content/uploads/Frame.png' %}
{% set env_bottom = fn('get_field','newsletter_env_bottom','option') ?: '/wp-content/uploads/Group.png' %}

<section class="bg-[#F7F9FB]">
  {# main wrapper: max-w 1440, px 64 desktop / 16 mobile, py 80, centered, gap 80 #}
  <div class="mx-auto max-w-[90rem] px-[1rem] md:px-[4rem] md:py-[3.5rem] py-[5rem] flex justify-center items-center gap-[5rem]">
    
    {# content wrapper (the card) #}
    <div class="relative flex flex-col justify-center items-start gap-[2rem] flex-[1_0_0] rounded-[8px] bg-[#040D20] backdrop-blur-[15px] 
                p-[1.5rem] md:py-[3rem] md:pr-[4rem] md:pl-[7.5rem] md:pb-[3rem] overflow-hidden">
      
      {# title + paragraph wrapper #}
      <div class="flex flex-col justify-center items-start gap-[1.5rem] max-w-[44.188rem]">
                <h4 class="text-white  font-[350]  text-[2.25rem] md:text-[3.5rem]">

          {{ nl_title }}
        </h4>
        <p class="text-white/90 !text-[1.25rem] leading-[1.4]">
          {{ nl_text }}
        </p>
      </div>

      {# form wrapper #}
      <form class="flex items-start gap-[0.5rem] self-stretch max-w-[24.375rem]" action="#" method="post">
        <input
          type="email"
          name="email"
          placeholder="EMAIL"
          class="flex-1 h-[2.4375rem] px-5 py-3 !rounded-[2.5rem] border border-white/30 bg-transparent text-white placeholder-white/80 uppercase text-[0.75rem] leading-[1.2] tracking-[0.075rem] outline-none"
          required
        />
        <button
          type="submit"
          class="w-[2.4375rem] h-[2.4375rem] rounded border border-[#08E8BD] bg-[#08E8BD] grid place-items-center"
          aria-label="Submit"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="7" height="12" viewBox="0 0 7 12" fill="none">
            <path d="M0.707153 10.7071L5.70715 5.70709L0.707153 0.707092" stroke="black" stroke-linecap="square"/>
          </svg>
        </button>
      </form>

      {# floating envelopes (inside the card) #}
      <img src="{{ env_top }}" alt="" class="hidden lg:block pointer-events-none select-none absolute right-[107.339px] top-[0px] w-auto h-auto" />
      <img src="{{ env_bottom }}" alt="" class="hidden lg:block  pointer-events-none select-none absolute right-[145.172px] bottom-[0px] w-auto h-auto" />
    </div>

  </div>
</section>
