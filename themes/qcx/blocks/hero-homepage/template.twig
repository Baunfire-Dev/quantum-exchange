<section class="{{ block.slug }} {{ block.className }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	<div class="~pt-[4.5rem]/[10.5rem] ~pb-[18.5rem]/[13.125rem]">
		<div class="container relative z-[2]">
			<div class="flex flex-col ~gap-[1.25rem]/[3.75rem]">
				{% if fields.heading.upper_text or fields.heading.lower_text %}
					<div class="flex flex-col max-w-[67.875rem]">
						{% if fields.heading.upper_text %}
							<h1 class="upper-text alpha">{{ fields.heading.upper_text }}</h1>
						{% endif %}

						{% if fields.heading.lower_text %}
							<h1 class="lower-text alpha">{{ fields.heading.lower_text }}</h1>
						{% endif %}
					</div>
				{% endif %}

				{% if fields.paragraph or fields.cta %}
					<div class="content-group alpha flex flex-col gap-[1.5rem] ~pl-[0rem]/[20.875rem]">
						{% if fields.paragraph %}
							<p class="sm:max-w-[20rem]">{{ fields.paragraph }}</p>
						{% endif %}

						{% include 'components/cta.twig' with {
                            class : 'filled blue',
                            cta: fields.cta
                        } %}
					</div>
				{% endif %}
			</div>
		</div>

		{% if fields.vimeo_video_id %}
			<div class="media-container video" data-video="{{ fields.vimeo_video_id }}"></div>
		{% endif %}
	</div>
</section>
