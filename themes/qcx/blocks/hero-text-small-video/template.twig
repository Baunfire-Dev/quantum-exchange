<section class="{{ block.slug }} {{ block.className }} overflow-y-visible">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "~pb-[17rem]/[5rem]" %}

	<div class="container">
		<div class="{{ pt }} {{ pb }}">
			<div class="~px-[0rem]/[7rem]">
				<div class="flex flex-col gap-[2rem] relative">
					{% if fields.heading %}
						<h1 class="block-title alpha relative z-[2]">{{ fields.heading }}</h1>
					{% endif %}

					<div class="block-content alpha relative z-[2] flex flex-col max-w-[30.5rem] ~gap-[1rem]/[1.5rem] md:ml-[6.875rem]">
						{% if fields.paragraph %}
							<p>{{ fields.paragraph }}</p>
						{% endif %}

						{% include 'components/cta.twig' with {
                            class: 'filled blue',
                            cta: fields.cta,
                        } %}
					</div>

                    {% if fields.media_video %}
                        <div class="media-container video">
                            <video class="alpha" src="{{ fields.media_video }}" autoplay muted loop playsinline preload="metadata" disablepictureinpicture disableremoteplayback>
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    {% endif %}
				</div>
			</div>
		</div>
	</div>
</section>
