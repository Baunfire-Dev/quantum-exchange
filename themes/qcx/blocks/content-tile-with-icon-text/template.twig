<section class="{{ block.slug }} {{ not fields.dark_mode ? 'bg-' ~ fields.bg : 'bg-[#F7F9FB]' }} {{ fields.dark_mode ? 'dark' }} bg-[#F7F9FB] overflow-x-clip overflow-y-visible">

	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != 'unset' ? fields.padding_top : 'st-xxl' %}
	{% set pb = fields.padding_bottom and fields.padding_bottom != 'unset' ? fields.padding_bottom : 'sb-xxl' %}

	<div class="container">
		<div class="{{ pt }} {{ pb }}">
			<div class="flex flex-col items-center ~gap-[2.5rem]/[4rem]">
				<div class="w-full ~md:~px-[0rem]/[7rem]">
					<div class="flex flex-col items-start ~gap-[1.25rem]/[2rem]">
						{% if fields.heading %}
							<h2 class="block-title alpha max-w-[54rem]">{{ fields.heading }}</h2>
						{% endif %}

						{% if fields.paragraph %}
							<p class="block-para alpha md:ml-[6.875rem] max-w-[30.5rem]">{{ fields.paragraph }}</p>
						{% endif %}
					</div>
				</div>

				{% if fields.items %}
					<div class="flex flex-wrap ~gap-y-[1rem]/[1.5rem] mx-[-0.75rem] w-[calc(100%+1.5rem)]">
						{% for item in fields.items %}
							{% if item.title or item.icon %}
								<div class="max-sm:w-full sm:flex-1 sm:basis-[calc(100%/2)] xl:basis-[calc(100%/4)]">
                                    <div class="item alpha mx-[0.75rem] ~p-[1rem]/[1.5rem] flex flex-col ~gap-[1rem]/[1.5rem] rounded-[0.5rem] border border-gray">
                                        {% include 'components/image.twig' with {
                                            image: item.icon,
                                            class: 'w-[3rem] h-[3rem] object-contain',
                                            size: "medium",
                                        } %}

                                        {% if item.title %}
                                            <p class="lg">
                                                {{ item.title }}
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
							{% endif %}
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</section>
