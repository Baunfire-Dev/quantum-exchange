<section class="{{ block.slug }} {{ block.className }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-xl" %}

	<div class="container">
		<div class="{{ pt }} {{ pb }}">
			<div class="flex flex-col ~gap-[2.5rem]/[4rem]">
				{% if fields.heading %}
					<div class="~md:~px-[0rem]/[7rem]">
						<h2 class="block-title alpha max-w-[52rem]">{{ fields.heading }}</h2>
					</div>
				{% endif %}

				{% if fields.items|length %}
					<div class="tabs-container">
						<div class="tabs-inner block-duo alpha">
							<div class="tab-select" id="slx">
								<select>
									{% for index, item in fields.items %}
										<option value="{{ index }}" {{ index == 0 ? 'selected' : '' }}>{{ item.category }}</option>
									{% endfor %}
								</select>

								<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M19 9.11772L12 16L5 9.11772L6.13683 8L12 13.7646L17.8632 8L19 9.11772Z" fill="black"/>
								</svg>
							</div>

							<div class="tab-items">
								{% for index, item in fields.items %}
									<div class="tab-item {{ index == 0 ? 'active' : '' }}" data-index="{{ index }}">
										<p class="button">{{ item.category }}</p>
									</div>
								{% endfor %}
							</div>
						</div>

						<div class="tab-panels">
							{% for tabIndex, tabItem in fields.items %}
								<div class="tab-panel {{ tabIndex == 0 ? 'active' : '' }}" data-index="{{ tabIndex }}">
									<div class="items">
										<div class="items-nav block-duo alpha">
											<button class="ar-l">
												<svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewbox="0 0 6 10" fill="none">
													<path d="M5 9L1 5L5 1" stroke="black" stroke-linecap="square"/>
												</svg>
												<span class="button">Previous</span>
											</button>

											<div class="bg-gray w-[1px] h-[1.25rem]"></div>

											<button class="ar-r">
												<span class="button">Next</span>
												<svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewbox="0 0 6 10" fill="none">
													<path d="M1 1L5 5L1 9" stroke="black" stroke-linecap="square"/>
												</svg>
											</button>
										</div>

										{% if tabItem.item|length %}
											<div class="owl-carousel">
												{% for item in tabItem.item %}
													<div class="item">
														<div class="item-card">
															<h5 class="text-white">{{ item.title }}</h5>

															<div class="item-content">
																<h5 class="text-white">{{ item.title }}</h5>

																<div class="item-content-inner">
																	<p class="text-white">{{ item.description }}</p>

																	{% include 'components/cta.twig' with {
                                                                        'class' : 'filled white',
                                                                        'cta': item.link,
                                                                    } %}
																</div>
															</div>

															<div class="item-image">
																{% include 'components/image.twig' with {
                                                                    'image': item.image,
                                                                    'size': 'large'
                                                                } %}
															</div>
														</div>
													</div>
												{% endfor %}
											</div>
										{% endif %}
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</section>
