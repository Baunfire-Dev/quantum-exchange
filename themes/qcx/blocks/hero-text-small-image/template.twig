<section class="{{ block.slug }} {{ block.className }} overflow-y-visible">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-xl" %}

	<div class="container">
		<div class="{{ pt }} {{ pb }}">
			<div class="flex max-md:flex-col ~gap-[2rem]/[4.875rem]">
				<div class="flex flex-col gap-[2rem] md:flex-1 md:basis-[45.3125rem] md:pt-[2.25rem]">
					{% if fields.heading %}
						<h1 class="block-title alpha">{{ fields.heading }}</h1>
					{% endif %}

					<div class="block-content alpha flex flex-col ~gap-[1rem]/[1.5rem] md:pl-[6.875rem] md:~pr-[0rem]/[8rem]">
						{% if fields.paragraph %}
							<p>{{ fields.paragraph }}</p>
						{% endif %}

						{% include 'components/cta.twig' with {
                            class: 'filled blue',
                            cta: fields.cta,
                        } %}
					</div>
				</div>

				<div class="block-image alpha max-md:w-full md:flex-1 md:basis-[31.875rem] md:~pr-[0rem]/[5.125rem]">
					{% include 'components/image.twig' with {
                        image: fields.media_image,
                        class: 'object-contain h-auto aspect-[427/379] w-full',
                        size: "full",
                        loading: "eager"
                    } %}
				</div>
			</div>
		</div>
	</div>
</section>
