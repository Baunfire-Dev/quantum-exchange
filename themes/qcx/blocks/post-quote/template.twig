<section class="{{ block.slug }} {{ block.className }}"
         style="background: url('/wp-content/uploads/Rectangle-7863-1.svg') center/cover no-repeat;">
  {% if block.anchor %}
    <div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
  {% endif %}

  <div class="mx-auto  p-[4rem] flex flex-col items-start gap-[2rem] rounded-[0.5rem] border border-[#08E8BD] text-white">
    
    {# Quote icon + message #}
    <div class="flex flex-col items-start gap-[1.5rem] w-full">
      <!-- Quote Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" width="52" height="38" viewBox="0 0 52 38" fill="none" aria-hidden="true" focusable="false">
        <path d="M52 4C52 1.79086 50.2091 0 48 0H32.7368C30.5277 0 28.7368 1.79086 28.7368 4V19.4862C28.7368 20.3176 28.9959 21.1282 29.4779 21.8056L39.9213 36.4796C40.6002 37.4335 41.6987 38 42.8695 38C45.4927 38 47.2443 35.2959 46.1717 32.902L43.6842 27.3497C42.4986 24.7034 44.4348 21.7143 47.3346 21.7143H48C50.2091 21.7143 52 19.9234 52 17.7143V4ZM23.2632 4C23.2632 1.79086 21.4723 0 19.2632 0H4C1.79086 0 0 1.79086 0 4V19.4862C0 20.3176 0.259029 21.1282 0.741074 21.8056L11.1845 36.4796C11.8634 37.4335 12.9618 38 14.1326 38C16.7559 38 18.5075 35.2959 17.4349 32.902L14.9474 27.3497C13.7617 24.7034 15.6979 21.7143 18.5977 21.7143H19.2632C21.4723 21.7143 23.2632 19.9234 23.2632 17.7143V4Z" fill="#00A1FF"/>
      </svg>

      {% if fields.message %}
        <p class="lg text-white">{{ fields.message }}</p>
      {% endif %}
    </div>

    {# Name, position, company #}
    <div class="flex flex-col items-start gap-[0.75rem] shrink-0">
      {% if fields.person %}
        <p class="text-[18px] leading-[1.4] font-[400] text-white">{{ fields.person }}</p>
      {% endif %}

      {% if fields.position or fields.company %}
        <div class="flex items-center gap-[12px] w-full text-white">
          {% if fields.position %}
            <p class="sm text-white font-at-aero">{{ fields.position }}</p>
          {% endif %}
          {% if fields.company %}
            <p class="sm text-white font-at-aero">{{ fields.company }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>

  </div>
</section>
