					</svg>

					{% if fields.message %}
						<p class="text-white lg">{{ fields.message }}</p>
					{% endif %}
				</div>

				<div class="flex flex-col ~gap-[0.5rem]/[0.75rem]">
					{% if fields.person %}
						<p class="text-white">{{ fields.person }}</p>
					{% endif %}

					{% if fields.position or fields.company %}
						<div class="flex gap-[0.75rem] flex-wrap">
							{% if fields.position %}
								<p class="text-white xsm">{{ fields.position }}</p>
							{% endif %}

							{% if fields.company %}
								<p class="text-white xsm">{{ fields.company }}</p>
							{% endif %}
						</div>
					{% endif %}
				</div>
			</div>

			<svg class="h-auto w-auto min-w-full min-h-full object-cover absolute top-0 left-0" xmlns="http://www.w3.org/2000/svg" width="886" height="483" viewbox="0 0 886 483" fill="none">
