<section class="{{ block.slug }} {{ block.className }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	<div class="container">
		<div class="relative bg-blue rounded-[0.5rem] overflow-hidden border border-green">
